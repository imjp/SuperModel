<!DOCTYPE html>
<html>
	<head>
		<title><%= title %></title>
		<%= stylesheet_link_tag "application" %>  
		<%= csrf_meta_tags %> 
	</head>
	<body>
		<div id="top_bar"> 	
			<ul>  
				<% if current_user %>	
					<li><%= link_to "Edit Profile", edit_user_path(current_user) %></li>   
					
				<% else %>
					<li>Are you a model?</li>
				<% end %>
			</ul>  
			
			
			<div class="auth">
				<% if current_user %>
					<%= current_user.name %> | 
					<%= link_to "Log out", logout_path %>
				<% else %>
					<%= link_to "Register", register_path %> | 
					<%= link_to "Login", login_path %>			
				<% end %>
			</div>
		</div>
		<header>
			<div class="logo">
				<h1><%= link_to "PureModels", root_path %></h1>
			</div>
			
			<nav>
				<ul> 
					<li><a href="/male">Male</a></li>
					<li><a href="/female">Female</a></li>
					<li><a href="/about">About</a></li>
					<li><a href="/contact">Contact</a></li> 
				</ul> 
			</nav>
		</header>
		
		
		<section id="container">
			<% if notice %>
				<p id="notice" ><%= notice %></p> 
			<% end %>
			<%= yield %>
		</section>
		
		<footer> 
		</footer>
		<%= javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.min.js", "rails", "shadowbox" %> 
		<script>
			$(document).ready(function(){
				//dropdown navigation
				$("#name_dropdown").change(function() {
					window.location.href = "http://localhost:3000/" + $(this).val();
				});	  
				
				  
				//tabs 
				var tabContents = $(".tab_content").hide(), 
					tabs = $(".tab_nav li");

				tabs.first().addClass("active").show();
				tabContents.first().show();

				tabs.click(function() {
					var $this = $(this), 
						activeTab = $this.find('a').attr('href');
						history.pushState(null, '', activeTab);
					
					if(!$this.hasClass('active')){
						$this.addClass('active').siblings().removeClass('active');
						tabContents.hide().filter(activeTab).fadeIn();
					}
					
					return false;
				});
				
				$(window).bind('popstate', function(){
					$.getScript(location.href);
				});				
			});

			Shadowbox.init();
		</script>
	</body>
</html> 